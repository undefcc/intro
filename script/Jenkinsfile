// Jenkinsfile: ä»…åœ¨ ECS ä¸Šæ‹‰å–é˜¿é‡Œäº‘é•œåƒå¹¶è¿è¡Œ
pipeline {
    agent any
    environment {
        REGISTRY = 'crpi-zpvonb2nha7j0qgy.cn-shenzhen.personal.cr.aliyuncs.com'
        IMAGE_NAMESPACE = 'cc4ever'
        APP_NAME = 'web-intro'
        ECS_HOST = '47.115.57.172' // æ›¿æ¢ä¸ºå®é™… ECS å…¬ç½‘IP
        ECS_USER = 'root' // æˆ– ubuntu/ecs-user
    }
    stages {
        stage('Deploy to ECS') {
            steps {
                withCredentials([
                    usernamePassword(credentialsId: 'aliyun-docker', usernameVariable: 'ALIYUN_DOCKER_USERNAME', passwordVariable: 'ALIYUN_DOCKER_PASSWORD'),
                    sshUserPrivateKey(credentialsId: 'ecs-server-key', keyFileVariable: 'SSH_KEY')
                ]) {
                    sh '''
                    IMAGE_LATEST="$REGISTRY/$IMAGE_NAMESPACE/$APP_NAME:latest"
                    ssh -i $SSH_KEY -o StrictHostKeyChecking=no $ECS_USER@$ECS_HOST '
                        docker login --username=${ALIYUN_DOCKER_USERNAME} --password=${ALIYUN_DOCKER_PASSWORD} ${REGISTRY}
                        docker pull ${IMAGE_LATEST}
                        docker stop ${APP_NAME} || true
                        docker rm ${APP_NAME} || true
                        docker run -d -p 3000:3000 --name ${APP_NAME} --restart unless-stopped ${IMAGE_LATEST}
                    '
                    '''
                }
            }
        }
    }
    post {
        success {
            echo 'ğŸ‰ éƒ¨ç½²æˆåŠŸ!'
        }
        failure {
            echo 'âŒ éƒ¨ç½²å¤±è´¥!'
        }
    }
}